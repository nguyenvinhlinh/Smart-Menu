<h1>New Menu Item</h1>

<%= form_for @menu_item, url: {controller: "menu_items", action: "create"} do |f| %>
    <label>Name: </label>
    <%= f.text_field :name %> </br>
    <label>Image:</label> <%= f.text_field :image %> </br>
    <label>Description:</label> <%= f.text_field :description %> </br>
    <label>Category:</label> <%= f.text_field :category %> </br>
    <label>Ingredients:</label> <%= f.text_field :ingredient %> </br>
    <label>Taste:</label> <%= f.text_field :taste %> </br>
    <%= f.submit "Create Menu Item" %>
<% end %>

<%= link_to 'Back', menu_items_path %>
